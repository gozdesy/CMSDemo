<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sample CMS</title>
    @Styles.Render("~/Content/css") 
</head>
<body>
    @Html.Partial("_DesignToolbar")
    <div class="nav">
        <div class="nav__menu">
            <ul class="nav__menu__list">
                <li id="nav-home" class="nav__menu__list__item">@Html.ActionLink("Home", "Index", "Home", routeValues:null, htmlAttributes: new { @class = "nav__menu__list__item__link" })</li>
                <li class="nav__menu__list__item">@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { @class = "nav__menu__list__item__link" })</li>
                <li class="nav__menu__list__item">@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { @class = "nav__menu__list__item__link" })</li>
            </ul>
        </div>
        <div class="nav__login">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/cms")
    @RenderSection("scripts", required: false)
</body>
</html>
